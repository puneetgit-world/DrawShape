<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DWS Draw Shape</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container body-content">
        <form class="form" method="post" action="@Url.Action("ParseInput","Draw")">
            <div class="row">
                <div class="col-xs-9 col-sm-9 col-md-9">
                    @Html.TextBox("Instruction", TempData["instruction"], new { @class = "form-control", placeholder = "eg. Draw a circle with a radius of 100" })
                </div>
                

                <div class="col-xs-3 col-sm-3" col-md-3>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
            
            <br />
            <small class="form-text text-muted">Format : @Html.Raw("Draw a(n) [shape] with a [measurement] of [amount] (and a(n) [measurement] of [amount])")</small>

            
        </form>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DWS Draw Shape</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
